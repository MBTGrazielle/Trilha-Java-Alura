
public class Gerente extends Funcionario {

	private int senha;

	public void setSenha(int senha) {
		this.senha = senha;
	}

	public boolean autentic(int senha) {
		if (this.senha == senha) {
			return System.out.println("Sistema logado");
			;
		} else {
			return false;
		}
	}

	public double getBonificacao() {
		return this.getSalario() * 0.2;
	}
}
